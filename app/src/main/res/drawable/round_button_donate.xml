<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="8dip" android:color="#f4a8a8" />
            <gradient android:angle="-90" android:startColor="#f4a8a8" android:endColor="#689a92"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="8dip" android:color="#f4a8a8" />
            <solid android:color="#f4a8a8"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <stroke android:width="8dip" android:color="#f4a8a8" />
            <gradient android:angle="-90" android:startColor="#f4a8a8" android:endColor="#f9dada" />
        </shape>
    </item>
</selector>
